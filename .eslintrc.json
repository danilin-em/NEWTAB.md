{
    "env": {
        "browser": true,
        "es6": true,
        "webextensions": true,
        "jquery": true
    },
    "extends": [
        "eslint:recommended",
        "google"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "require-jsdoc": 0,
        "indent": [
          "error",
          4
        ]
    }
}
